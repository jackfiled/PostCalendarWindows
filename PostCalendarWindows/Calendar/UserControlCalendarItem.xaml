<UserControl x:Class="PostCalendarWindows.Calendar.UserControlCalendarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PostCalendarWindows.Calendar"
             mc:Ignorable="d"
             MouseDoubleClick="UserControl_MouseDoubleClick"
             >
    <local:CustomizedColorZone Mode="PrimaryMid" x:Name="background" BorderBrush="{StaticResource PrimaryHueDarkBrush}" BorderThickness="1" CornerRadius="5">
        <StackPanel>
            <TextBlock Text="{Binding name}" TextWrapping="WrapWithOverflow"/>
            <TextBlock Text="{Binding place}"/>
        </StackPanel>
    </local:CustomizedColorZone>
</UserControl>
