<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PostCalendarWindows.Setting"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="PostCalendarWindows.Setting.UserControlCalendarSetting"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>

            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="教学周相关设置" FontSize="20"/>
            <TextBlock Grid.Row="1" Text="当前学期为 " FontSize="16" Margin="38,10,0,0"/>
            <ComboBox Grid.Row="1" x:Name="semester_combobox" Margin="125,5,516,5" FontSize="16" SelectionChanged="semester_combobox_SelectionChanged">
            </ComboBox>
            <Border BorderBrush="#FF363131" BorderThickness="0,0,0,1"/>
        </Grid>
    </Grid>
</UserControl>
